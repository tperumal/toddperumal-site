---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Todd Perumal',
  description = "I write essays and build products. I'm interested in how things get made — and why most of them don't.",
} = Astro.props;

const pageTitle = title === 'Todd Perumal' ? title : `${title} — Todd Perumal`;
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: 'https://toddperumal.substack.com', label: 'Essays', external: true },
  { href: '/career', label: 'Career' },
];
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{pageTitle}</title>
  <meta name="description" content={description} />

  <meta property="og:title" content={pageTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:type" content="website" />
  <meta name="twitter:card" content="summary" />
  <meta name="twitter:title" content={pageTitle} />
  <meta name="twitter:description" content={description} />

  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" href="/favicon.png" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

  <ViewTransitions />
</head>
<body>

  <header class="site-header">
    <a href="/" class="site-name">Todd Perumal</a>
    <button class="nav-toggle" aria-label="Toggle menu" aria-expanded="false">
      <span class="nav-toggle-bar"></span>
      <span class="nav-toggle-bar"></span>
    </button>
  </header>

  <nav class="site-nav">
    {navLinks.map(({ href, label, external }) => (
      <a
        href={href}
        class:list={['nav-item', { active: !external && (currentPath === href || (href !== '/' && currentPath.startsWith(href))) }]}
        {...(external ? { target: '_blank', rel: 'noopener' } : {})}
      >
        {label}
      </a>
    ))}
  </nav>

  <main class="site-main">
    <slot />
  </main>

  <footer class="site-footer">
    <div class="footer-links">
      <a href="https://www.linkedin.com/in/toddperumal/" target="_blank" rel="noopener">LinkedIn</a>
      <a href="https://github.com/tperumal" target="_blank" rel="noopener">GitHub</a>
      <a href="https://toddperumal.substack.com" target="_blank" rel="noopener">Substack</a>
    </div>
    <p class="footer-copy">&copy; {new Date().getFullYear()} Todd Perumal</p>
  </footer>

  <script>
    function initNav() {
      const toggle = document.querySelector('.nav-toggle');
      const nav = document.querySelector('.site-nav');
      if (!toggle || !nav) return;

      toggle.addEventListener('click', () => {
        const expanded = toggle.getAttribute('aria-expanded') === 'true';
        toggle.setAttribute('aria-expanded', String(!expanded));
        nav.classList.toggle('open');
      });

      nav.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          toggle.setAttribute('aria-expanded', 'false');
          nav.classList.remove('open');
        });
      });
    }

    initNav();
    document.addEventListener('astro:after-swap', initNav);
  </script>
</body>
</html>

<style>
  /* ===== Header ===== */
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24px var(--page-gutter);
    z-index: 100;
  }

  .site-name {
    font-size: var(--text-large);
    font-weight: 600;
    letter-spacing: -0.03em;
    line-height: 1;
  }

  .nav-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
    flex-direction: column;
    gap: 5px;
  }

  .nav-toggle-bar {
    display: block;
    width: 20px;
    height: 2px;
    background: var(--fg);
    transition: transform 0.15s ease;
  }

  /* ===== Left Nav ===== */
  .site-nav {
    position: fixed;
    top: 160px;
    left: var(--page-gutter);
    z-index: 100;
    display: flex;
    flex-direction: column;
  }

  .nav-item {
    font-size: var(--text-body);
    line-height: 1.25;
    padding: 3px 0;
    color: var(--fg-33);
    transition: color 0.15s ease;
    -webkit-user-select: none;
    user-select: none;
  }

  .nav-item:hover {
    color: var(--fg);
  }

  .nav-item.active {
    color: var(--fg);
  }

  /* ===== Main ===== */
  .site-main {
    margin-left: var(--content-offset);
    padding: 160px var(--page-gutter) 100px 0;
    max-width: 840px;
  }

  /* ===== Footer ===== */
  .site-footer {
    margin-left: var(--content-offset);
    padding: var(--page-gutter) var(--page-gutter) var(--page-gutter) 0;
    border-top: 1px solid var(--fg-10);
  }

  .footer-links {
    display: flex;
    gap: 24px;
    margin-bottom: 12px;
  }

  .footer-links a {
    font-size: var(--text-small);
    color: var(--fg-33);
    transition: color 0.15s ease;
  }

  .footer-links a:hover {
    color: var(--fg);
  }

  .footer-copy {
    font-size: 13px;
    color: var(--fg-33);
  }

  /* ===== Mobile ===== */
  @media (max-width: 1024px) {
    .site-header {
      padding: 16px 24px;
      background: var(--bg);
    }

    .nav-toggle {
      display: flex;
    }

    .site-nav {
      position: fixed;
      top: 60px;
      left: 0;
      right: 0;
      padding: 16px 24px 20px;
      background: var(--bg);
      border-bottom: 1px solid var(--fg-10);
      transform: translateY(-100%);
      opacity: 0;
      pointer-events: none;
      transition: transform 0.25s ease, opacity 0.25s ease;
    }

    .site-nav.open {
      transform: translateY(0);
      opacity: 1;
      pointer-events: auto;
    }

    .nav-item {
      padding: 6px 0;
    }

    .site-main {
      margin-left: 0;
      padding: 100px 24px 60px;
      max-width: none;
    }

    .site-footer {
      margin-left: 0;
      padding: 24px;
    }
  }
</style>
