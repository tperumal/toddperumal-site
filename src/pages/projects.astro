---
import Base from '../layouts/Base.astro';

const projects = [
  {
    name: 'Neon Puck',
    description: '2-player air hockey with online multiplayer. Server-authoritative physics at 60 Hz with room-based matchmaking. Supports local 2-player (multi-touch) and online play.',
    tags: ['Canvas', 'Socket.io', 'Node.js', 'Web Audio API'],
    url: 'https://neon-puck.onrender.com',
    github: 'https://github.com/tperumal/neon-puck',
  },
  {
    name: 'Signal & Stories',
    description: 'Economic indicators dashboard tracking Housing, Labor, Inflation, GDP & Growth, and Consumer data from FRED. AI-generated market analysis using Claude. Each card loads independently with its own error state.',
    tags: ['Vercel Serverless', 'Claude API', 'Chart.js', 'FRED API'],
    url: 'https://signalandstories.dev',
    github: 'https://github.com/tperumal/signal-and-stories-dashboard',
  },
];

const comingSoon = [
  {
    name: 'WaterSePush',
    description: 'Interactive React prototype with 3 South African metros, 28 zones, alerts, and community reporting.',
  },
  {
    name: 'Gaysingh Road',
    description: 'A project on South African Indians.',
  },
  {
    name: 'Saturdayish',
    description: 'A community of builders.',
  },
  {
    name: 'Ikhaya Club',
    description: 'An app for family spread apart.',
  },
];
---

<Base title="Projects" description="Things I've built — games, dashboards, and tools.">
  <section class="hero">
    <h1 class="page-title">Projects</h1>
    <p class="page-desc">Things I've built.</p>
  </section>

  {projects.map((project) => (
    <section class="project-item">
      <h2 class="project-name">{project.name}</h2>
      <p class="project-desc">{project.description}</p>
      <p class="project-tags">
        {project.tags.join(' · ')}
      </p>
      <div class="project-links">
        <a href={project.url} target="_blank" rel="noopener" class="project-link">View Live &rarr;</a>
        <a href={project.github} target="_blank" rel="noopener" class="project-link project-link--secondary">GitHub</a>
      </div>
    </section>
  ))}

  <section class="coming-soon-header">
    <span class="label">Coming Soon</span>
  </section>

  {comingSoon.map((project) => (
    <section class="project-item project-item--muted">
      <h2 class="project-name">{project.name}</h2>
      <p class="project-desc">{project.description}</p>
    </section>
  ))}
</Base>

<style>
  .hero {
    padding-bottom: 60px;
  }

  .page-title {
    font-size: var(--text-huge);
    font-weight: 600;
    letter-spacing: -0.03em;
    margin-bottom: 12px;
  }

  .page-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
  }

  .project-item {
    padding-top: 60px;
    border-top: 1px solid var(--fg-10);
    margin-top: 60px;
  }

  .project-item:first-of-type {
    margin-top: 0;
  }

  .project-name {
    font-size: var(--text-large);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 10px;
  }

  .project-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
    line-height: 1.6;
    margin-bottom: 16px;
  }

  .project-tags {
    font-size: var(--text-small);
    color: var(--fg-33);
    margin-bottom: 20px;
  }

  .project-links {
    display: flex;
    gap: 24px;
  }

  .project-link {
    font-size: var(--text-small);
    color: var(--fg-50);
    border-bottom: 1px solid var(--fg-25);
    padding-bottom: 1px;
    transition: color 0.15s ease, border-color 0.15s ease;
  }

  .project-link:hover {
    color: var(--fg);
    border-color: var(--fg);
  }

  .project-link--secondary {
    color: var(--fg-33);
    border-color: var(--fg-15);
  }

  .coming-soon-header {
    padding-top: 80px;
  }

  .label {
    display: block;
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--fg-33);
  }

  .project-item--muted {
    opacity: 0.4;
  }
</style>
