---
import Base from '../layouts/Base.astro';

const projects = [
  {
    name: 'Neon Puck',
    description: '2-player air hockey with online multiplayer. Server-authoritative physics at 60 Hz with room-based matchmaking. Supports local 2-player (multi-touch) and online play.',
    tags: ['Canvas', 'Socket.io', 'Node.js', 'Web Audio API'],
    url: 'https://neon-puck.onrender.com',
    github: 'https://github.com/tperumal/neon-puck',
  },
  {
    name: 'Signal & Stories Dashboard',
    description: 'Housing market data dashboard tracking 6 FRED indicators and 8 housing stocks. AI-generated market analysis using Claude. Each card loads independently with its own error state.',
    tags: ['Vercel Serverless', 'Claude API', 'Chart.js', 'FRED API'],
    url: 'https://signalandstories.dev',
    github: 'https://github.com/tperumal/signal-and-stories-dashboard',
  },
  {
    name: 'Signal & Stories',
    description: 'Next.js blog with MDX posts, dynamic OG image generation, RSS feed, and structured data. Built with the App Router.',
    tags: ['Next.js', 'TypeScript', 'Tailwind', 'MDX'],
    url: 'https://signalandstories.com',
    github: 'https://github.com/tobysfca/signal-and-stories',
  },
];
---

<Base title="Projects" description="Things I've built â€” games, dashboards, and tools.">
  <section class="hero">
    <div class="container">
      <h1 class="page-title">Projects</h1>
      <p class="page-desc">Things I've built.</p>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="project-list">
        {projects.map((project) => (
          <div class="project-card">
            <div class="project-content">
              <h2 class="project-name">{project.name}</h2>
              <p class="project-desc">{project.description}</p>
              <div class="project-tags">
                {project.tags.map((tag) => (
                  <span class="project-tag">{tag}</span>
                ))}
              </div>
              <div class="project-links">
                <a href={project.url} target="_blank" rel="noopener" class="project-link">
                  View Live &rarr;
                </a>
                <a href={project.github} target="_blank" rel="noopener" class="project-link project-link--secondary">
                  GitHub
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Base>

<style>
  .hero {
    padding: var(--space-5xl) 0 var(--space-xl);
  }

  .page-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-sm);
  }

  .page-desc {
    font-size: 1.1rem;
    color: var(--color-text-secondary);
  }

  .project-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .project-card {
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    background: var(--color-surface);
    transition: border-color var(--transition-fast);
  }

  .project-card:hover {
    border-color: var(--color-text-tertiary);
  }

  .project-name {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: var(--space-sm);
    letter-spacing: -0.01em;
  }

  .project-desc {
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .project-tag {
    font-size: 0.75rem;
    font-weight: 500;
    color: var(--color-tag-text);
    background: var(--color-tag-bg);
    padding: 0.2rem 0.6rem;
    border-radius: var(--radius-sm);
  }

  .project-links {
    display: flex;
    gap: var(--space-lg);
  }

  .project-link {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .project-link:hover {
    color: var(--color-text-secondary);
  }

  .project-link--secondary {
    color: var(--color-text-tertiary);
  }

  @media (max-width: 640px) {
    .hero {
      padding: var(--space-3xl) 0 var(--space-md);
    }

    .project-card {
      padding: var(--space-xl);
    }
  }
</style>
