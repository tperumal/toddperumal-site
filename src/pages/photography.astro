---
import Base from '../layouts/Base.astro';

const photos = [
  { src: '/photos/untitled-1.jpg', title: 'Untitled 1' },
  { src: '/photos/untitled-2.jpg', title: 'Untitled 2' },
  { src: '/photos/untitled-3.jpg', title: 'Untitled 3' },
  { src: '/photos/untitled-4.jpg', title: 'Untitled 4' },
  { src: '/photos/untitled-5.jpg', title: 'Untitled 5' },
  { src: '/photos/untitled-6.jpg', title: 'Untitled 6' },
  { src: '/photos/untitled-7.jpg', title: 'Untitled 7' },
];
---

<Base title="Photography" description="Selected photographs by Todd Perumal.">
  <section class="hero">
    <h1 class="page-title">Photography</h1>
  </section>

  <section class="series">
    <h2 class="series-title">Ingleside</h2>
    <p class="series-meta">San Francisco, March 2014. Kodak 400, disposable camera.</p>
  </section>

  <section class="gallery">
    {photos.map((photo) => (
      <figure class="photo-item">
        <img src={photo.src} alt={photo.title} loading="lazy" />
        <figcaption class="photo-caption">{photo.title}</figcaption>
      </figure>
    ))}
  </section>
</Base>

<style>
  .hero {
    padding-bottom: 60px;
  }

  .page-title {
    font-size: var(--text-huge);
    font-weight: 600;
    letter-spacing: -0.03em;
  }

  .series {
    padding-bottom: 60px;
    border-bottom: 1px solid var(--fg-10);
  }

  .series-title {
    font-size: var(--text-large);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 8px;
  }

  .series-meta {
    font-size: var(--text-small);
    color: var(--fg-33);
  }

  .gallery {
    padding-top: 60px;
    display: flex;
    flex-direction: column;
    gap: 60px;
  }

  .photo-item {
    max-width: 100%;
  }

  .photo-item img {
    width: 100%;
    display: block;
  }

  .photo-caption {
    font-size: var(--text-small);
    color: var(--fg-33);
    margin-top: 12px;
  }
</style>
