---
import Base from '../layouts/Base.astro';

const publications = [
  {
    name: 'Essays',
    description: 'Personal writing on technology, culture, and how things get made.',
    url: 'https://toddperumal.substack.com',
    platform: 'Substack',
  },
  {
    name: 'Basic Acts',
    description: 'Film reviews written with Fran. Honest takes on what we watch.',
    url: 'https://basicacts.substack.com',
    platform: 'Substack',
  },
  {
    name: 'Signal and Stories',
    description: 'Writing about building, AI, and technology.',
    url: 'https://signalandstories.substack.com',
    platform: 'Substack',
  },
];
---

<Base title="Writing" description="Essays, film reviews, and newsletters.">
  <section class="hero">
    <h1 class="page-title">Writing</h1>
    <p class="page-desc">Essays, film reviews, and newsletters.</p>
  </section>

  {publications.map((pub) => (
    <section class="pub-item">
      <div class="pub-header">
        <h2 class="pub-name">{pub.name}</h2>
        <span class="pub-platform">{pub.platform}</span>
      </div>
      <p class="pub-desc">{pub.description}</p>
      <a href={pub.url} target="_blank" rel="noopener" class="pub-link">Read on Substack &rarr;</a>
    </section>
  ))}
</Base>

<style>
  .hero {
    padding-bottom: 60px;
  }

  .page-title {
    font-size: var(--text-huge);
    font-weight: 600;
    letter-spacing: -0.03em;
    margin-bottom: 12px;
  }

  .page-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
  }

  .pub-item {
    padding-top: 60px;
    border-top: 1px solid var(--fg-10);
    margin-top: 60px;
  }

  .pub-item:first-of-type {
    margin-top: 0;
  }

  .pub-header {
    display: flex;
    align-items: baseline;
    gap: 16px;
    margin-bottom: 8px;
  }

  .pub-name {
    font-size: var(--text-large);
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .pub-platform {
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--fg-33);
  }

  .pub-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .pub-link {
    font-size: var(--text-small);
    color: var(--fg-50);
    border-bottom: 1px solid var(--fg-25);
    padding-bottom: 1px;
    transition: color 0.15s ease, border-color 0.15s ease;
  }

  .pub-link:hover {
    color: var(--fg);
    border-color: var(--fg);
  }
</style>
