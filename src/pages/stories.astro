---
import Base from '../layouts/Base.astro';
---

<Base title="Stories" description="Short fiction by Todd Perumal.">
  <section class="hero">
    <h1 class="page-title">Stories</h1>
    <p class="page-desc">Short fiction.</p>
  </section>

  <section class="story-item">
    <div class="story-header">
      <h2 class="story-name">Denton TX 1995</h2>
      <span class="story-status">In Progress</span>
    </div>
    <p class="story-desc">A collection of 10 short stories.</p>
  </section>
</Base>

<style>
  .hero {
    padding-bottom: 60px;
  }

  .page-title {
    font-size: var(--text-huge);
    font-weight: 600;
    letter-spacing: -0.03em;
    margin-bottom: 12px;
  }

  .page-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
  }

  .story-item {
    padding-top: 60px;
    border-top: 1px solid var(--fg-10);
    margin-top: 60px;
    max-width: 700px;
  }

  .story-item:first-of-type {
    margin-top: 0;
  }

  .story-item--muted {
    opacity: 0.4;
  }

  .story-header {
    display: flex;
    align-items: baseline;
    gap: 16px;
    margin-bottom: 8px;
  }

  .story-name {
    font-size: var(--text-large);
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .story-status {
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--fg-33);
  }

  .story-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
    line-height: 1.6;
  }
</style>
