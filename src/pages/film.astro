---
import Base from '../layouts/Base.astro';
---

<Base title="Film" description="Film credits, reviews, and video work.">
  <section class="hero">
    <h1 class="page-title">Film</h1>
    <p class="page-desc">Credits, reviews, and video work.</p>
  </section>

  <section class="film-item">
    <span class="label">Reviews</span>
    <h2 class="film-name">Basic Acts</h2>
    <p class="film-desc">Film reviews written with Fran. Honest takes on what we watch, published on Substack.</p>
    <a href="https://basicacts.substack.com" target="_blank" rel="noopener" class="film-link">Read reviews &rarr;</a>
  </section>

  <section class="film-item">
    <span class="label">Credits</span>
    <h2 class="film-name">IMDB</h2>
    <p class="film-desc">Film credits and production work.</p>
    <a href="https://www.imdb.com/name/nm13462146/" target="_blank" rel="noopener" class="film-link">View on IMDB &rarr;</a>
  </section>

  <section class="film-item film-item--muted">
    <span class="label">Video</span>
    <h2 class="film-name">Videos</h2>
    <p class="film-desc">Video work and embedded content coming soon.</p>
  </section>
</Base>

<style>
  .hero {
    padding-bottom: 60px;
  }

  .page-title {
    font-size: var(--text-huge);
    font-weight: 600;
    letter-spacing: -0.03em;
    margin-bottom: 12px;
  }

  .page-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
  }

  .film-item {
    padding-top: 60px;
    border-top: 1px solid var(--fg-10);
    margin-top: 60px;
  }

  .film-item:first-of-type {
    margin-top: 0;
  }

  .film-item--muted {
    opacity: 0.4;
  }

  .label {
    display: block;
    font-size: var(--text-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--fg-33);
    margin-bottom: 16px;
  }

  .film-name {
    font-size: var(--text-large);
    font-weight: 600;
    letter-spacing: -0.02em;
    margin-bottom: 8px;
  }

  .film-desc {
    font-size: var(--text-body);
    color: var(--fg-50);
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .film-link {
    font-size: var(--text-small);
    color: var(--fg-50);
    border-bottom: 1px solid var(--fg-25);
    padding-bottom: 1px;
    transition: color 0.15s ease, border-color 0.15s ease;
  }

  .film-link:hover {
    color: var(--fg);
    border-color: var(--fg);
  }
</style>
